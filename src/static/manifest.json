{
  "manifest_version": 2,
  "name": "Wiki Highlight",
  "version": "0.41.0",

  "permissions": [
    "tabs"
  ],

  "description": "A plain text description",
  "icons": {
    "128": "wiki-logo.png"
  },

  "browser_action": {
    "default_icon": "wiki-logo.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  }
}

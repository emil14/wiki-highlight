{
  "manifest_version": 2,
  "name": "Wiki Highlight",
  "version": "0.0.1",

  "default_locale": "en",
  "description": "A plain text description",
  "icons": {...},

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    "matches": ["<all_urls>"],
    "js": ["myscript.js"]
  ]
}
